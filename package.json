{
  "name": "Mana-ZAP",
  "version": "1.0.0",
  "description": "Um aplicativo Electron para enviar mensagens em massa via WaScript API.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "keywords": [
    "Electron",
    "WhatsApp",
    "WaScript",
    "Sender"
  ],
  "author": "Manasses",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.manasses.manazapsender",
    "productName": "ManaZap Sender",
    "copyright": "Copyright Â© 2025 Mana-Tech",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "node_modules/**/*",
      "package.json",
      "icon.png",
      "!.env"
    ],
    "extraFiles": [
      ".env"             
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  }
}
